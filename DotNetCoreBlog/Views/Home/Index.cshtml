@model IEnumerable<Post>

@{
    ViewBag.Title = "Blog Website";
    ViewBag.Description = "The blog of Shamlen Pillay";
    ViewBag.Keywords = "shamlen pillay blog programming machine learning";
}

<div class="main-img">
    <span class="title">Awesome Blog Site</span>
</div>

<div class="container">
    @foreach (var post in Model)
    {
        var image_path = $"/Image/{post.Image}";
        <a class="post" asp-controller="Home" asp-action="Post" asp-route-id="@post.Id">
            <img src="@image_path" />
            <span class="title">@post.Title</span>
        </a>
    }
</div>
